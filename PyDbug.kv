                font_size: (root.width**2 + root.height**2) / 14**4


            Button:
                markup: True
                pos_hint:{"x":0.7, "y": 0.1}
                size_hint:0.2,0.1
                text: "[color=#F19A0A][b]B[/b][/color]"
                on_release:
                    app.root.current = "qsb"
                    root.manager.transition.direction = "right"

            Button:
                markup: True
                pos_hint:{"x":0.1, "y": 0.1}
                size_hint:0.2,0.1
                text: "[color=#F19A0A][b]D[/b][/color]"
                on_release:
                    app.root.current = "qsd"
                    root.manager.transition.direction = "left"

            Button:
                markup: True
                pos_hint:{"x":0.3, "y": 0.1}
                size_hint:0.2,0.1
                text: "[color=#F19A0A][b]Select[/b][/color]"
                on_release:
                    app.root.current = "qsb"
                    root.manager.transition.direction = "right"


            Label:
                markup: True
                text: "[color=#F19A0A][b]TIME: [/b][/color]" + str(round(root.number))
                size_hint: 0.2, 0.1
                pos_hint: {"x":0.8, "top":1}


            Button:
                text: 'START'
                on_press: root.do_action()
                on_press: root.number = 0
                pos_hint:{"x":0.5, "y": 0.1}
                size_hint:0.2,0.1

            Label:
                id: my_custom_label
                text: 'PRESS START TO SHOW THE CODE'
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":.9}



