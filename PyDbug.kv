<CreateAccountWindow>:
    name: "create"

    nickname: nickname
    schid: schid
    password: passw

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                markup: True
                text: "[color=#839192][b]Create an Account[/b][/color]"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                markup: True
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "[color=#F19A0A]NickName:[/color] "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                id: nickname
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                markup: True
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                text: "[color=#F19A0A]School ID:[/color] "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.4, 0.12
                id: schid
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                markup: True
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "[color=#F19A0A]Password:[/color]  "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.12
                id: passw
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            markup: True
            pos_hint:{"x":0.3,"y":0.25}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "[color=#F19A0A][b]Already have an Account? Log In[/b][/color]"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            markup: True
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.10
            text: "[color=#F19A0A][b]Submit[/b][/color]"
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()


<LoginWindow>:
    name: "login"

    schid: schid
    password: password

    FloatLayout:

        Label:
            markup: True
            text:"[color=#F19A0A][b]School ID:[/b][/color] "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.27, 0.10

        TextInput:
            id: schid
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.45 , "top":0.9}
            size_hint: 0.4, 0.10

        Label:
            markup: True
            text:"[color=#F19A0A][b]Password:[/b][/color]  "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.27, 0.10

        TextInput:
            id: password
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            password: True
            pos_hint: {"x": 0.45, "top":0.7}
            size_hint: 0.4, 0.10

        Button:
            markup: True
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "[color=#F19A0A][b]Login[/b][/color]"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            markup: True
            pos_hint:{"x":0.3,"y":0.3}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "[color=#F19A0A][b]Don't have an Account? Create One[/b][/color]"
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()


<MainWindow>:

    n: n
    schid: schid
    created:created

    FloatLayout:

